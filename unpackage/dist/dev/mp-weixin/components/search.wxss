.search-bar {
  position: relative;
  z-index: 2;
  width: 100%;
  height: 62rpx;
  border: 1rpx solid #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 32rpx;
  margin: 0 auto;
}
.search-bar.grey {
  background: rgba(175, 175, 175, 0.2);
  border: 1rpx solid #AFAFAF;
}
.search-bar .search-icon {
  margin-left: 20rpx;
  width: 28rpx;
  height: 28rpx;
}
.search-bar .search-form {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 0 10rpx;
  color: #fff;
  font-size: 24rpx;
}
.search-bar .search-form.grey {
  color: #AFAFAF;
}
.search-bar .placeholder {
  color: #fff;
  font-size: 24rpx;
}
.search-bar .placeholder-grey {
  color: #AFAFAF;
  font-size: 24rpx;
}
.search-bar .search-btn {
  width: 158rpx;
  height: 62rpx;
  line-height: 62rpx;
  color: #fff;
  font-size: 26rpx;
  background-image: -webkit-linear-gradient(140deg, #ff9122, #fed500);
  background-image: linear-gradient(-50deg, #ff9122, #fed500);
  outline: none;
  border: none;
  border-radius: 30rpx;
}
.search-bar .search-btn::after {
  display: none;
}

